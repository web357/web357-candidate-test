<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Webtest\Component\Web357test\Site\Field">
  <fieldset>
    <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
    <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
      <option value="2">JARCHIVED</option>
      <option value="-2">JTRASHED</option>
    </field>
    <field name="ordering"/>
    <field name="checked_out" type="hidden" filter="unset"/>
    <field name="checked_out_time" type="hidden" filter="unset"/>
    <field name="title" filter="safehtml" type="text" required="true" label="JGLOBAL_TITLE" description="JFIELD_TITLE_DESC" hint="COM_WEB357TEST_FORM_LBL_RECIPE_TITLE"/>
    <field name="description" filter="safehtml" type="textarea" required="true" label="COM_WEB357TEST_FORM_LBL_RECIPE_DESCRIPTION" description="COM_WEB357TEST_FORM_DESC_RECIPE_DESCRIPTION" hint="COM_WEB357TEST_FORM_LBL_RECIPE_DESCRIPTION"/>
    <field name="ingredients" filter="safehtml" type="text" required="true" label="COM_WEB357TEST_FORM_LBL_RECIPE_INGREDIENTS" description="COM_WEB357TEST_FORM_DESC_RECIPE_INGREDIENTS" hint="COM_WEB357TEST_FORM_LBL_RECIPE_INGREDIENTS"/>
    <field name="cooking_time" filter="safehtml" type="number" label="COM_WEB357TEST_FORM_LBL_RECIPE_COOKING_TIME" description="COM_WEB357TEST_FORM_DESC_RECIPE_COOKING_TIME" hint="COM_WEB357TEST_FORM_LBL_RECIPE_COOKING_TIME"/>
	
	<field name="serving_size" default="1-2 servings" type="list" label="COM_WEB357TEST_FORM_LBL_RECIPE_SERVING_SIZE" description="One serving equals to a ration of food" hint="How many will eat?">
		<option value="1-2 servings">1-2 servings</option>
		<option value="2-4 servings">2-4 servings</option>
		<option value="4-6 servings">4-6 servings</option>
		<option value="6-8 servings">6-8 servings</option>
		<option value="8+ servings">8+ servings</option>
	</field>
	
    <field name="difficulty" type="list" label="COM_WEB357TEST_FORM_LBL_RECIPE_DIFFICULTY" description="COM_WEB357TEST_FORM_DESC_RECIPE_DIFFICULTY" hint="COM_WEB357TEST_FORM_LBL_RECIPE_DIFFICULTY">
      <option value="1-easy">COM_WEB357TEST_RECIPES_DIFFICULTY_OPTION_EASY</option>
      <option value="2-medium">COM_WEB357TEST_RECIPES_DIFFICULTY_OPTION_MEDIUM</option>
      <option value="3-hard">COM_WEB357TEST_RECIPES_DIFFICULTY_OPTION_HARD</option>
    </field>
    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
  </fieldset>
</form>
<!-- front end recipes form -->