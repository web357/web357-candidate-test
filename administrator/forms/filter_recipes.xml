<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field name="search" type="text" description="COM_WEB357TEST_SEARCH_FILTER_SUBMIT"
               label="COM_USERS_FILTER_SEARCH_DESC"
               class="js-stools-search-string" />
                    <field name="state"
							type="status"
							label="COM_WEB357TEST_FILTER_STATE"
							description="COM_WEB357TEST_FILTER_STATE_DESC"
							onchange="this.form.submit();">
							<option value="">JOPTION_SELECT_PUBLISHED</option>
						</field>

                        <field name="difficulty"
                            type="list"
                            label="COM_WEB357TEST_FILTER_DIFFICULTY"
                            description="COM_WEB357TEST_FILTER_DIFFICULTY_DESC"
                            onchange="this.form.submit();">
                            <option value="">JOPTION_SELECT_DIFFICULTY</option>
                              <option value="easy">Easy</option>
                              <option value="medium">Medium</option>
                              <option value="hard">Hard</option>
                        </field>
        

    </fields>

    <fields name="list">

        <field name="fullordering"
               type="list"
               label="COM_WEB357TEST_LIST_FULL_ORDERING"
               description="COM_WEB357TEST_LIST_FULL_ORDERING_DESC"
               onchange="this.form.submit();"
               default="a.id DESC"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="a.id ASC">COM_WEB357TEST_ID_ASC</option><option value="a.id DESC">COM_WEB357TEST_ID_DESC</option><option value="a.state ASC">COM_WEB357TEST_STATE_ASC</option><option value="a.state DESC">COM_WEB357TEST_STATE_DESC</option><option value="a.ordering ASC">COM_WEB357TEST_ORDERING_ASC</option><option value="a.ordering DESC">COM_WEB357TEST_ORDERING_DESC</option><option value="a.title ASC">COM_WEB357TEST_TITLE_ASC</option><option value="a.title DESC">COM_WEB357TEST_TITLE_DESC</option><option value="a.description ASC">COM_WEB357TEST_DESCRIPTION_ASC</option><option value="a.description DESC">COM_WEB357TEST_DESCRIPTION_DESC</option><option value="a.ingredients ASC">COM_WEB357TEST_INGREDIENTS_ASC</option><option value="a.ingredients DESC">COM_WEB357TEST_INGREDIENTS_DESC</option><option value="a.cooking_time ASC">COM_WEB357TEST_COOKING_TIME_ASC</option><option value="a.cooking_time DESC">COM_WEB357TEST_COOKING_TIME_DESC</option><option value="a.difficulty ASC">COM_WEB357TEST_DIFFICULTY_ASC</option><option value="a.difficulty DESC">COM_WEB357TEST_DIFFICULTY_DESC</option>

        </field>

       <field name="limit"
               type="limitbox"
               label="COM_WEB357TEST_LIST_LIMIT"
               description="COM_WEB357TEST_LIST_LIMIT_DESC"
               class="input-mini"
               default="25"
               onchange="this.form.submit();"
        />

    </fields>

</form>
